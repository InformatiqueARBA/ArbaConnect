<!DOCTYPE html>
<html>

<head>
	<meta charset="UTF-8">
	<title>
		{% block title %}ArbaConnect
		{% endblock %}
	</title>
	<link rel="icon" href="{{ asset('favicon_arba.ico') }}" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"> {%
	block stylesheets %}{% endblock %}
	{% block javascripts %}
	{% block importmap %}
	{{ importmap('app') }}
	{% endblock %}
	{% endblock %}
</head>

<body>
	<nav class="navbar navbar-expand-lg nav-color sticky-top">
		<div class="container-fluid">
			<div class="mr-auto text-center">
				<a class="text-decoration-none" href="{{ path('app_home') }}">
					{# <span class="ms-2 green-text">ArbaConnect</span> #}
					<img class="logo_arba" src="{{ asset('images/arba_connect_vert.png') }}" alt="">
				</a>

			</div>
			{% if app.user and is_granted('ROLE_ADMIN') %}
			<a class="text-decoration-none ms-4" href="{{ path('admin_dashboard') }}">
				<span class="green-text mt-4">AdminDashboard</span>
			</a>
			{% endif %}
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01"
				aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse ms-auto">
				<ul class="navbar-nav ms-auto me-2">
					{% if app.user %}
					<li class="nav-item dropdown">
						<a class="nav-link dropdown-toggle text-uppercase green-text" href="#" id="navbarDropdown"
							role="button" data-bs-toggle="dropdown" aria-expanded="false">
							<img src="{{ asset('images/door-open.svg') }}" alt="exit-door"
								class="exit-door-icon green-exit-door">
						</a>
						<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
							<li>
								<a class="dropdown-item" href="{{ path('app_logout') }}">Se d√©connecter</a>
							</li>
						</ul>
					</li>
					<h1 class='green-text mt-4'>ADH
						{{ app.user.enterprise }}</h1>
					{% endif %}
				</ul>
			</div>
		</div>
	</nav>
	<div class="container-fluid my-4">
		{% include 'ArbaConnect/partials/infos.html.twig' %}
		{% include 'ArbaConnect/partials/flash.html.twig' %}
		{% block body %}
		{% endblock %}
	</div>
</body>

</html>